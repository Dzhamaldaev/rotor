{
    "name": "visavi/rotor",
    "description": "RotorCMS",
    "keywords": ["cms", "wap", "rotor"],
    "homepage": "http://visavi.net",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Alexander Grigorev",
            "email": "admin@visavi.net",
            "homepage": "http://visavi.net"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "altorouter/altorouter": "~1.2",
        "cbschuld/browser.php": "dev-master",
        "gregwar/captcha": "^1.1",
        "illuminate/http": "~5.6",
        "illuminate/translation": "~5.6",
        "illuminate/database": "~5.6",
        "mobiledetect/mobiledetectlib": "^2.8",
        "php-ffmpeg/php-ffmpeg": "~0.11",
        "swiftmailer/swiftmailer": "~6.0",
        "vlucas/phpdotenv": "^2.4",
        "robmorgan/phinx": "^0.9",
        "php-curl-class/php-curl-class": "^8.0",
        "jenssegers/blade": "^1.1",
        "visavi/cleanup": "^1.3",
        "visavi/crontask":  "^1.1",
        "nelexa/zip": "^3.1",
        "intervention/image": "^2.4"
    },
    "require-dev": {
        "filp/whoops": "^2.1",
        "phpunit/phpunit": "^7.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php rotor install",
            "@php rotor key:generate"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/routes.php",
            "app/helpers.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "7.0-dev"
        }
    }
}
