{
    "name": "visavi/rotor",
    "description": "Rotor",
    "keywords": ["cms", "wap", "rotor"],
    "homepage": "http://visavi.net",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Alexander Grigorev",
            "email": "admin@visavi.net",
            "homepage": "http://visavi.net"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "cbschuld/browser.php": "~1.9",
        "gregwar/captcha": "^1.1",
        "google/recaptcha": "~1.2",
        "illuminate/database": "~6.4",
        "illuminate/http": "~6.4",
        "illuminate/translation": "~6.4",
        "illuminate/view": "~6.4",
        "illuminate/cache": "~6.4",
        "illuminate/filesystem": "~6.4",
        "illuminate/redis": "~6.4",
        "predis/predis": "^1.1",
        "mobiledetect/mobiledetectlib": "^2.8",
        "php-ffmpeg/php-ffmpeg": "~0.14",
        "swiftmailer/swiftmailer": "~6.2",
        "josegonzalez/dotenv": "^3.2",
        "robmorgan/phinx": "^0.11",
        "php-curl-class/php-curl-class": "^8.6",
        "visavi/cleanup": "^1.5",
        "visavi/crontask":  "^1.2",
        "nelexa/zip": "^3.1",
        "intervention/image": "^2.5",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.0"
    },
    "require-dev": {
        "filp/whoops": "^2.5",
        "phpunit/phpunit": "^8.3",
        "phpstan/phpstan": "^0.11",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "scripts": {
        "phpstan": "phpstan analyse --no-progress -vvv",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "@php rotor config:clear --ansi",
            "@php rotor route:clear --ansi"
        ],
        "post-create-project-cmd": [
            "@php rotor app:configure --ansi",
            "@php rotor key:generate --ansi"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "modules/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.0-dev"
        }
    }
}
