{
    "name": "visavi/rotor",
    "description": "Rotor",
    "keywords": ["cms", "wap", "rotor"],
    "homepage": "http://visavi.net",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Alexander Grigorev",
            "email": "admin@visavi.net",
            "homepage": "http://visavi.net"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "cbschuld/browser.php": "dev-master",
        "gregwar/captcha": "^1.1",
        "google/recaptcha": "~1.2",
        "illuminate/http": "~5.7",
        "illuminate/translation": "~5.7",
        "illuminate/database": "~5.7",
        "mobiledetect/mobiledetectlib": "^2.8",
        "php-ffmpeg/php-ffmpeg": "~0.12",
        "swiftmailer/swiftmailer": "~6.1",
        "vlucas/phpdotenv": "^2.5",
        "robmorgan/phinx": "^0.9",
        "php-curl-class/php-curl-class": "^8.3",
        "jenssegers/blade": "^1.1",
        "visavi/cleanup": "^1.3",
        "visavi/crontask":  "^1.1",
        "nelexa/zip": "^3.1",
        "intervention/image": "^2.4",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.0"
    },
    "require-dev": {
        "filp/whoops": "^2.2",
        "phpunit/phpunit": "^7.3",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "@php rotor route:clear"
        ],
        "post-create-project-cmd": [
            "@php rotor app:install",
            "@php rotor key:generate"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "7.5-dev"
        }
    }
}
